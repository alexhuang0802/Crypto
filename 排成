name: Run 45m Strategy

on:
  workflow_dispatch:
  schedule:
    - cron: "*/15 * * * *"  # 每 15 分鐘喚醒一次（UTC）

jobs:
  run:
    runs-on: ubuntu-latest
    timeout-minutes: 10

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run script (once)
       
        run: |
          python "45分K戰法.py"
